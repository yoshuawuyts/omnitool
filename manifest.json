{
  "name": "Omnitool",
  "version": "1.0.0",
  "description": "Omnitool Multiplexed DevTools",
  "devtools_page": "launcher.html",
  "icons": { "128": "128.png" },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "minimum_chrome_version" : "22.0",
  "permissions": [
    "tabs",
    "contextMenus",
    "<all_urls>"
  ],
  "manifest_version": 2
}
